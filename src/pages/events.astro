---
import MainLayout from "../layouts/MainLayout.astro";
import RecentEvents from "../components/sections/RecentEvents.astro";
---

<MainLayout title="All Events" description="Browse all our upcoming and past events">
    <div class="container mx-auto px-4 py-8 bg-background dark:bg-background min-h-screen">
        <header class="mb-12 text-center">
            <h1 class="text-3xl font-bold tracking-tight text-foreground mb-4">All Events</h1>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                Discover all our events, workshops, and community gatherings
            </p>
        </header>
        
        <RecentEvents />
    </div>
</MainLayout>
