---
// Footer component with navigation, social links, and site info
import { navQuery, heroQuery } from "../lib/api";

let navData;
try {
    navData = await navQuery();
} catch (error) {
    console.error('Error fetching navigation data:', error);
    navData = { menus: { nodes: [] }, generalSettings: { title: 'Site', description: '' } };
}

let contactData;
try {
    contactData = await heroQuery();
} catch (error) {
    console.error('Error fetching contact data:', error);
    contactData = {
        contactAddress: null,
        contactCity: null,
        contactState: null,
        contactZip: null,
        contactPhone: null,
        contactEmail: null
    };
}

const { menus, pages, generalSettings } = navData;
const primaryMenu = menus?.nodes?.[0] || null;
const allPages = pages?.nodes || [];

// Extract contact information
const { contactAddress, contactCity, contactState, contactZip, contactPhone, contactEmail } = contactData;
